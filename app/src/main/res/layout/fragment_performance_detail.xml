<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar 영역 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme" />

        <!-- 포스터 및 제목 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/posterImageView"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/performance1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="뮤지컬 제목"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/datesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024.12.07 - 2025.02.16"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한전아트센터"
                    android:paddingTop="8dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- 공연 정보, 판매 정보, 후기 탭 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tab_performance_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="공연정보"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/performance1"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tab_sales_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="판매정보"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/performance1"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tab_reviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="관람후기"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/performance1"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- 하단 버튼 -->
        <Button
            android:id="@+id/bookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_200"
            android:text="예매하기"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
