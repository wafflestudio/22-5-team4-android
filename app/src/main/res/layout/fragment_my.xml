<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- 로그인 안내 화면 -->
    <ScrollView
        android:id="@+id/layout_logged_out_step1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingTop="32dp">
        <!-- 상단 헤더 -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 왼쪽 여백 -->
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- 마이페이지 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마이페이지"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#000000" />

            <!-- 오른쪽 아이콘들 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <!-- 알림 아이콘 -->
                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_notification"
                    android:contentDescription="알림 아이콘" />

                <!-- 설정 아이콘 -->
                <ImageView
                    android:id="@+id/iv_settings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="설정 아이콘" />
            </LinearLayout>

            <!-- 아이콘 + 로그인 해주세요 -->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="30dp"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout_icon" />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/layout_login_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="로그인 해주세요"
                        android:textSize="16sp"
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/logged_in_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="반갑습니다 박정현님"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:visibility="gone"/>
                </FrameLayout> <!-- 로그아웃 아이콘 -->

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right" /> <!-- 오른쪽 화살표 -->
            </LinearLayout>


            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- 티켓 예매/취소 내역 -->
            <LinearLayout
                android:id="@+id/btn_ticket_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="티켓 예매/취소 내역"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- 인터파크페이 카드 관리 -->
            <LinearLayout
                android:id="@+id/btn_card_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="인터파크페이 카드 관리"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Footer -->
            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/btn_customer_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고객센터"
                    android:textColor="#777777"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:paddingHorizontal="8dp" />

                <TextView
                    android:id="@+id/btn_inquiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:1문의하기"
                    android:textSize="14sp"
                    android:textColor="#777777"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:paddingHorizontal="8dp" />

                <TextView
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textSize="14sp"
                    android:textColor="#777777"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
