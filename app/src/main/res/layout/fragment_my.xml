<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- 로그인 안내 화면 -->
    <ScrollView
        android:id="@+id/layout_logged_out_step1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingTop="32dp">
        <!-- 상단 헤더 -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 왼쪽 여백 -->
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- 마이페이지 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마이페이지"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#000000" />

            <!-- 오른쪽 아이콘들 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <!-- 알림 아이콘 -->
                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_notification"
                    android:contentDescription="알림 아이콘" />

                <!-- 설정 아이콘 -->
                <ImageView
                    android:id="@+id/iv_settings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="설정 아이콘" />
            </LinearLayout>

            <!-- 아이콘 + 로그인 해주세요 -->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="30dp"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout_icon" /> <!-- 로그아웃 아이콘 -->

                <TextView
                    android:id="@+id/layout_login_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="로그인 해주세요"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right" /> <!-- 오른쪽 화살표 -->
            </LinearLayout>


            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- 티켓 예매/취소 내역 -->
            <LinearLayout
                android:id="@+id/btn_ticket_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="티켓 예매/취소 내역"
                    android:textSize="16sp"
                    android:textColor="#000000" />


            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- 인터파크페이 카드 관리 -->
            <LinearLayout
                android:id="@+id/btn_card_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="인터파크페이 카드 관리"
                    android:textSize="16sp"
                    android:textColor="#000000" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:id="@+id/layout_logged_out_step2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Interpark 로고 -->
            <ImageView
                android:id="@+id/logo_interpark"
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_interpark"
                android:contentDescription="Interpark 로고"
                android:padding="20dp"
                android:layout_marginBottom="24dp" />

            <!-- 아이디 입력 -->
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="아이디"
                android:drawableStart="@drawable/ic_settings"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="12dp"
                android:inputType="text" />

            <!-- 비밀번호 입력 -->
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:drawableStart="@drawable/ic_settings"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="24dp"
                android:inputType="textPassword" />

            <!-- 로그인 상태 유지 및 혜택 알림 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <CheckBox
                    android:id="@+id/cb_keep_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그인 상태 유지"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp" />

                <CheckBox
                    android:id="@+id/cb_receive_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="혜택 알림받기"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 로그인 버튼 -->
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:backgroundTint="#007AFF"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- 하단 링크 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디찾기"
                    android:textColor="#007AFF"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호찾기"
                    android:textColor="#007AFF"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원가입"
                    android:textColor="#007AFF" />
            </LinearLayout>

            <!-- 간편 로그인 아이콘 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_kakao"
                    android:contentDescription="카카오 로그인"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_naver"
                    android:contentDescription="네이버 로그인"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_apple"
                    android:contentDescription="애플 로그인" />
            </LinearLayout>

            <!-- 하단 광고 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="휴대폰 번호로 로그인 (광고)"
                android:textColor="#777777"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>


    <!-- 로그인 중간 화면 -->
    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인 중입니다..." />
    </LinearLayout>

    <!-- 로그인 완료 화면 -->
    <ScrollView
        android:id="@+id/layout_logged_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 왼쪽 여백 -->
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- 마이페이지 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마이페이지"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#000000" />

            <!-- 오른쪽 아이콘들 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <!-- 알림 아이콘 -->
                <ImageView
                    android:id="@+id/iv_notification2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_notification"
                    android:contentDescription="알림 아이콘" />

                <!-- 설정 아이콘 -->
                <ImageView
                    android:id="@+id/iv_settings2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="설정 아이콘" />
            </LinearLayout>

            <!-- 아이콘 + 로그인 메시지 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="반갑습니다 박정현님"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right" />
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- 티켓 예매/취소 내역 -->
            <LinearLayout
                android:id="@+id/btn_ticket_history2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="티켓 예매/취소 내역"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- 인터파크페이 카드 관리 -->
            <LinearLayout
                android:id="@+id/btn_card_management2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="인터파크페이 카드 관리"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Footer -->
            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/btn_customer_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고객센터"
                    android:textColor="#777777"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:paddingHorizontal="8dp" />

                <TextView
                    android:id="@+id/btn_inquiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:1문의하기"
                    android:textSize="14sp"
                    android:textColor="#777777"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:paddingHorizontal="8dp" />

                <TextView
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textSize="14sp"
                    android:textColor="#777777"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
