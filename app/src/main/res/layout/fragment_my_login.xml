<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/layout_logged_out_step2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Interpark 로고 -->
            <ImageView
                android:id="@+id/logo_interpark"
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_interpark"
                android:contentDescription="Interpark 로고"
                android:padding="20dp"
                android:layout_marginBottom="24dp" />

            <!-- 아이디 입력 -->
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="아이디"
                android:drawableStart="@drawable/ic_settings"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="12dp"
                android:inputType="text" />

            <!-- 비밀번호 입력 -->
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:drawableStart="@drawable/ic_settings"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="24dp"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/errorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디 또는 비밀번호를 잘못 입력하셨습니다."
                android:textColor="@color/design_default_color_error"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="-12dp"
                android:layout_gravity="start"
                android:visibility="gone" />

            <!-- 로그인 상태 유지 및 혜택 알림 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <CheckBox
                    android:id="@+id/cb_keep_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그인 상태 유지"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp" />

                <CheckBox
                    android:id="@+id/cb_receive_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="혜택 알림받기"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 로그인 버튼 -->
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:backgroundTint="#007AFF"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- 하단 링크 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디찾기"
                    android:textColor="#007AFF"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호찾기"
                    android:textColor="#007AFF"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/text_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원가입"
                    android:textColor="#007AFF" />
            </LinearLayout>

            <!-- 간편 로그인 아이콘 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_kakao"
                    android:contentDescription="카카오 로그인"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_naver"
                    android:contentDescription="네이버 로그인"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_apple"
                    android:contentDescription="애플 로그인" />
            </LinearLayout>

            <!-- 하단 광고 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="휴대폰 번호로 로그인 (광고)"
                android:textColor="#777777"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
