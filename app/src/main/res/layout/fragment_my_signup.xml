<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/layout_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Interpark 로고 -->
            <ImageView
                android:id="@+id/logo_interpark"
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_interpark"
                android:contentDescription="Interpark 로고"
                android:padding="20dp"
                android:layout_marginBottom="18dp" />

            <!-- 아이디 입력 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:hint="아이디">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_no_border"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>



            <!-- 비밀번호 입력 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:hint="비밀번호">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_no_border"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 비밀번호 확인 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:hint="비밀번호 확인">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_no_border"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 이름 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:hint="이름">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_no_border"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 이메일 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:hint="이메일">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_no_border"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 휴대폰 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:hint="휴대폰">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_no_border"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- 로그인 상태 유지 및 혜택 알림 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginBottom="16dp">

                <CheckBox
                    android:id="@+id/cb_receive_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SNS, 이메일로 상품 및 이벤트 정보를 받겠습니다. (선택)"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp" />

                <CheckBox
                    android:id="@+id/cb_under_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14세 미만입니다."
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 회원가입 -->
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textColor="#FFFFFF"
                android:backgroundTint="#007AFF"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- 하단 링크 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이용 약관 보기"
                    android:textColor="#007AFF" />
            </LinearLayout>

            <!-- 하단 광고 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="휴대폰 번호로 로그인 (광고)"
                android:textColor="#777777"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
