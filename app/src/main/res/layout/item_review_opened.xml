<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/bg_review">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="12dp"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:progressTint="#FFD700"
                android:layout_marginBottom="-10dp"/>

            <TextView
                android:id="@+id/reviewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sample Text"
                android:layout_marginEnd="20dp"
                android:textSize="24sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="qdrp**"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:id="@+id/replies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="qdrp**"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="qdrp**"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_down"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/bg_review_opened">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reviewContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sample Text가 만약에너무길다면어떻게될지를알아봐야할것같아서이렇게의미없는텍스트를막치고있어요생각보다의도한대로잘나와주네요"
                android:layout_marginEnd="20dp"
                android:textSize="16sp"/>
            
            <LinearLayout
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">
                <Button
                    android:id="@+id/likeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공감"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:background="@drawable/bg_like_button"
                    android:drawableStart="@drawable/ic_like"
                    android:drawablePadding="-6dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"/>

                <Button
                    android:id="@+id/commentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글쓰기"
                    android:textSize="12sp"
                    android:textColor="#D3D3D3"
                    android:background="@drawable/bg_comment_button"
                    android:drawableEnd="@drawable/ic_down"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"/>
            </LinearLayout>
            
        </LinearLayout>


    </FrameLayout>

</LinearLayout>